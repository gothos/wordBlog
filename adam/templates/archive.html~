                            newPost.innerHTML = base.slice(1,base.length-2).join('');
                            document.getElementById('content').insertBefore(newPost,posts[i]);
                            sign = 1
                            return false;
                                
                        }
                        
                        
                        
                        

                    }
                    
                    if (sign != 1){
                        
                        $('#content').append(base.join(''));
                                          
                    }
                }else{
                    if (creating == 1){
                        
                        $('#content').prepend(base.join(''));
                    }else{
                        
                        $('#content').append(base.join(''));
                    }
                }                
           
                
            }
                

                
                        

                
                
                
