            $.fn.countNumOfComments = function(flag,id){
            
                if (flag == 1){
                    var add = 'Post';
                }else{
                    var add = 'Comment';
                }    
                
            
                m = 0
                var comments = $('#firstCDiv'+add+id+'').children()
                
                for (var i = 0, len = comments.length; i < len; i += 1) {
                    if (comments[i].id[0] == 'c'){
                        m = m + 1
                    }
                        
                    
                }
                    
                return m
                
                  
            
            }
                
                
                
                
